@model Product

@{
    Layout = "~/Views/Shared/NewLayout.cshtml";


<div class="d-flex justify-content-center">
    <h1>Add New Product</h1>
</div>

<br />
<br />
<br />

<form action="~/Product/Create" method="post">

    <div class="form-group">
        <input type="text" id="Id" name="Id" class="form-control" value="@Model.ProductId" hidden />
    </div>

    <div class="form-group">
        <label for="Title" class="form-label">Product Title</label>
        <input type="text" id="Title" name="Title" class="form-control" value="@Model.Title" />
    </div>

    <div class="form-group">
        <label for="Price" class="form-label">Product Price</label>
        <input type="number" id="Age" name="Price" class="form-control" value="@Model.Price" />
    </div>

    <div class="form-group">
        <label for="Description" class="form-label">Product Description</label>
        <input type="text" id="Description" name="Description" class="form-control" value="@Model.Description" />
    </div>

    <div class="form-group">
        <label for="Quantity" class="form-label">Product Quantity</label>
        <input type="number" id="Quantity" name="Quantity" class="form-control" value="@Model.Quantity" />
    </div>

    <div class="form-group">
        <label for="ImagePath" class="form-label">Product ImagePath</label>
        <input type="text" id="ImagePath" name="ImagePath" class="form-control" value="@Model.ImagePath" />
    </div>

    <div class="form-group">
        <label for="" class="form-label">Category</label>
        <select id="CategoryId" name="CategoryId" class="form-control">
            <option value ="@Model?.CategoryId">@Model?.Category.Name</option>
            @foreach (var item in ViewBag._Categories)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>


    <input type="submit" value="Create Product" class="btn btn-success my-5" />
    <a href="~/Product/Index" class="btn btn-secondary">Cancel</a>
    
</form>
}
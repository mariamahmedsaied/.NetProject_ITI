@model IEnumerable<Category>

@{
    Layout = "~/Views/Shared/NewLayout.cshtml";


<div class="d-flex justify-content-center">
    <h2>Categories</h2>
</div>

<br />
<br />
<br />

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">CategoryId</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="col">@item.CategoryId</th>
                <th scope="col">@item.Name</th>
                <th scope="col">@item.Description</th>
                <th scope="col">
                    <a asp-controller="Category" asp-action="ViewDetails" asp-route-id="@item.CategoryId" class="btn btn-primary mx-1">View</a>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning mx-1">Edit</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger mx-1">Delete</a>
                </th>
            </tr>
        }
    </tbody>
    <tfoot>
        <a asp-controller="Category" asp-action="Create" class="btn btn-success my-4">Add Category</a>
    </tfoot>
</table>
}
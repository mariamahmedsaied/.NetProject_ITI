@model IEnumerable<Product>

@{
    Layout = "~/Views/Shared/NewLayout.cshtml";


<div class="d-flex justify-content-center">
    <h2>Products</h2>
</div>

<br />
<br />
<br />

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">ProductId</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Quantity</th>
            <th scope="col">ImagePath</th>
            <th scope="col">Category</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="col">@item.ProductId</th>
                <th scope="col">@item.Quantity</th>
                <th scope="col">@item.Price</th>
                <th scope="col">@item.Description</th>
                <th scope="col">@item.Quantity</th>
                <th scope="col">@item.ImagePath</th>
                <th scope="col">@item.Category.Name</th>
                <th scope="col">
                    <a asp-controller="Product" asp-action="ViewDetails" asp-route-id="@item.ProductId" class="btn btn-primary mx-2">View</a>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning mx-2">Edit</a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger mx-2">Delete</a>
                </th>
            </tr>
        }
    </tbody>
    <tfoot>
        <a asp-controller="Product" asp-action="Create" class="btn btn-success my-4">Add Product</a>
    </tfoot>
    </table>
}